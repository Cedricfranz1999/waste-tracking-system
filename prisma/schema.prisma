datasource db {
  provider = "postgresql" // or mysql/sqlite
  url      = env("DATABASE_URL")
  directUrl =  env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
    id        String    @id @default(cuid())
    name String
    username  String
    Password String
}

model cms {
    id        String    @id @default(cuid())
    name String
    username  String
    Password String
}


model Scanner {
  id        String    @id @default(cuid())
  image        String?
  username      String
  password      String
  firstname      String
  email          String
  lastname       String
  address         String
  gender          String
  birthdate         String
  scans     ScanEvent[]
  createdAt DateTime  @default(now())
  verifyAt  DateTime?

}

model Product {
  id        String    @id @default(cuid())
  image     String? 
  barcode   String    @unique
  manufacturer String
  description String?  
  type         PRODUCT_ORIGIN @default(LOCAL)
  createdAt DateTime  @default(now())
  scans     ScanEvent[]
}

  enum PRODUCT_ORIGIN {
  INTERNATIONAL
  LOCAL
}

model ScanEvent {
  id          String    @id @default(cuid())
  scanner     Scanner   @relation(fields: [scannerId], references: [id])
  scannerId   String
  product     Product?  @relation(fields: [productId], references: [id])
  productId   String?
  location    String?
  latitude    Float?
  longitude   Float?
  quantity    Int?
  scannedAt   DateTime  @default(now())
}

model VerificationCode {
  id          String    @id @default(cuid())
  email       String  
  code        String
  requestAt   DateTime?    @updatedAt
}